{
  "name": "codio-cdn-browser-tests",
  "version": "0.1.0",
  "description": "Browser integration tests for Codio CDN Phase 2",
  "private": true,
  "scripts": {
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:e2e": "jest tests/e2e.test.js",
    "test:wasm": "jest tests/wasm.test.js",
    "test:sw": "jest tests/service-worker.test.js"
  },
  "devDependencies": {
    "@jest/globals": "^29.7.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "puppeteer": "^21.6.0",
    "wasm-pack": "^0.12.1",
    "webpack": "^5.89.0",
    "webpack-cli": "^5.1.4"
  },
  "jest": {
    "testEnvironment": "jsdom",
    "testMatch": [
      "**/tests/**/*.test.js"
    ],
    "collectCoverageFrom": [
      "service-worker/**/*.js",
      "extension/**/*.js",
      "!**/node_modules/**"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 80,
        "functions": 80,
        "lines": 80,
        "statements": 80
      }
    },
    "setupFilesAfterEnv": [
      "./tests/setup.js"
    ]
  }
}
